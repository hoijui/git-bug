@base          <http://git-bug.io/ontologies/0.1/bug> .
@prefix bug:   <#> .
@prefix ent:   <http://git-bug.io/ontologies/0.1/entity#> .
@prefix ident: <http://git-bug.io/ontologies/0.1/identity#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix dc:    <http://purl.org/dc/elements/1.1/> .
@prefix terms: <http://purl.org/dc/terms/> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

<>
  a owl:Ontology ;
  owl:versionInfo "0.1" ;
  owl:versionIRI <> ;
  dc:title   "git-bug-norm - bug"@en ;
  rdfs:label "git-bug-norm - bug"@en ;
  dc:description "A standard for a data-model of distributed issues/bugs."@en ;
  rdfs:comment   "A standard for a data-model of distributed issues/bugs."@en ;
  terms:contributor "Michael Mur√© <michael.mure@consensys.net>" ;
  terms:contributor "Robin Vobruba <hoijui.quaero@gmail.com>" ;
  terms:license "GPL v3"^^xsd:string ;
  terms:provenance "v2.0 Added new annotations to the ontology using standard/well-know annotation properties v1.5. Removed protege.owl import and references. Made ontology URI date-independent v1.4. Added Food class (used in domain/range of hasIngredient), Added several hasCountryOfOrigin restrictions on pizzas, Made hasTopping invers functional"@en .

# Classes

bug:Issue
  a owl:Class ;
  rdfs:subclassOf ent:Entity ;
  rdfs:label "Bug"@en ;
  rdfs:comment "Represents an issue or bug."@en .

bug:Operation
  a owl:Class ;
  rdfs:label "Operaton"@en ;
  rdfs:comment "A single operation on an issue."@en .

bug:CreateOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 1 ;
  rdfs:label "CreateOp"@en ;
  rdfs:comment "Creates a new issue."@en ;
  bug:type "CreateOp" .

bug:SetTitleOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 2 ;
  rdfs:label "SetTitleOp"@en ;
  rdfs:comment "Sets a new title."@en ;
  bug:type "SetTitleOp" .

bug:AddCommentOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 3 ;
  rdfs:label "AddCommentOp"@en ;
  rdfs:comment "Adds a new comment to an issue."@en ;
  bug:type "AddCommentOp" .

bug:SetStatusOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 4 ;
  rdfs:label "SetStatusOp"@en ;
  rdfs:comment "Sets the status of an issue."@en ;
  bug:type "SetStatusOp" .

bug:LabelChangeOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 5 ;
  rdfs:label "LabelChangeOp"@en ;
  rdfs:comment "Adds and/or removes labels to an issue."@en ;
  bug:type "LabelChangeOp" .

bug:EditCommentOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 6 ;
  rdfs:label "EditCommentOp"@en ;
  rdfs:comment "Edits a comment to an issue."@en ;
  bug:type "EditCommentOp" .

bug:NoOpOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 7 ;
  rdfs:label "NoOpOp"@en ;
  rdfs:comment "Does nothing (noop)."@en ;
  bug:type "NoOpOp" .

bug:SetMetadataOperation
  a owl:Class ;
  rdfs:subclassOf bug:Operation ;
  bug:op_id 8 ;
  rdfs:label "SetMetadataOp"@en ;
  rdfs:comment "Sets metadata."@en ;
  bug:type "SetMetadataOp" .

bug:MapEntry
  a owl:Class ;
  rdfs:label "MapEntry"@en ;
  rdfs:comment "Represents a Key-Value pair in a map."@en .

bug:Status
  a owl:Class ;
  rdfs:label "Issue status"@en .

bug:Label
  a owl:Class ;
  rdfs:label "Issue label"@en .

# Individuals

bug:OpenStatus
  a bug:Status ;
  rdfs:label "Open"@en ;
  rdfs:label "Offen"@de .

bug:ClosedStatus
  a bug:Status ;
  rdfs:label "Closed"@en ;
  rdfs:label "Geschlossen"@de .
  
# Annotations

bug:op_id
  a owl:AnnotationProperty .
# These are not allwoed in OWL DL for annotation properties
#  rdfs:domain bug:Operation ;
#  rdfs:range xsd:uint32 ;
#  owl:cardinality 1 .

bug:type
  a owl:AnnotationProperty .
# These are not allwoed in OWL DL for annotation properties
#  rdfs:domain bug:Operation ;
#  rdfs:range xsd:string ;
#  owl:cardinality 1 .

# Properties

bug:map_key
  a owl:DatatypeProperty ;
  rdfs:domain bug:MapEntry ;
  rdfs:range xsd:string ;
  owl:cardinality 1 .

bug:map_value
  a owl:DatatypeProperty ;
  rdfs:domain "&this;:MapEntry" ;
  rdfs:range xsd:string ;
  owl:cardinality 1 .

bug:operation
  a owl:DatatypeProperty ;
  rdfs:domain bug:Issue ;
  rdfs:range bug:Operation ;
  owl:minCardinality 1 .

bug:title
  a owl:DatatypeProperty ;
  rdfs:domain bug:CreateOperation, bug:SetTitleOperation ;
  rdfs:range xsd:string ;
  owl:cardinality 1 .

bug:message
  a owl:DatatypeProperty ;
  rdfs:domain bug:CreateOperation, bug:AddCommentOperation, bug:EditCommentOperation ;
  rdfs:range xsd:string ;
  owl:cardinality 1 .

bug:file
  a owl:DatatypeProperty ;
  rdfs:domain bug:CreateOperation, bug:AddCommentOperation, bug:EditCommentOperation ;
  rdfs:range foaf:sha1 ;
  owl:minCardinality 0 .

bug:old_title
  a owl:DatatypeProperty ;
  rdfs:domain bug:SetTitleOperation ;
  rdfs:range xsd:string ;
  owl:cardinality 1 .

bug:status
  a owl:ObjectProperty ;
  rdfs:domain bug:SetStatusOperation ;
  rdfs:range bug:Status ;
  owl:cardinality 1 .

bug:label_added
  a owl:ObjectProperty ;
  rdfs:domain bug:LabelChangeOperation ;
  rdfs:range bug:Label ;
  owl:minCardinality 0 .

bug:label_removed
  a owl:ObjectProperty ;
  rdfs:domain bug:LabelChangeOperation ;
  rdfs:range bug:Label ;
  owl:minCardinality 0 .

bug:target
  a owl:ObjectProperty ;
  rdfs:domain bug:EditCommentOperation ;
  rdfs:range bug:Comment ;
  owl:cardinality 1 .

bug:target
  a owl:ObjectProperty ;
  rdfs:domain bug:SetMetadataOperation ;
  rdfs:range bug:TODO ;
  owl:cardinality 1 .

bug:metadata
  a owl:ObjectProperty ;
  rdfs:domain bug:SetMetadataOperation ;
  rdfs:range bug:MapEntry ;
  owl:minCardinality 1 .
